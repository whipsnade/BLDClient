<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
<RelativeLayout android:id="@+id/choiceness_head" android:layout_width="fill_parent" 
         android:layout_height="0dip" 
         android:layout_weight="1.3">
            <com.bld.widget.ViewFlow android:id="@+id/viewflow" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:layout_alignParentTop="true"/>
            <com.bld.widget.CircleFlowIndicator 
                android:id="@+id/viewflowindic" 
                android:background="#00000000" 
                android:padding="10.0dip" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_alignParentRight="true" 
                android:layout_alignParentBottom="true" />
        </RelativeLayout>  
  <LinearLayout 
                android:orientation="vertical"    
                android:layout_width="fill_parent" 
                android:layout_height="0dip"
                 android:layout_weight="2.9"    
                android:gravity="center_horizontal">    
               
                <com.bld.view.MainGridView android:id="@+id/gridview_main" 
                        android:layout_width="fill_parent" 
                        android:layout_height="fill_parent" 
                        android:numColumns="3" 
                        android:padding="10dp" 
                        android:horizontalSpacing="4dp" 
                        android:verticalSpacing="4dp" 
                        android:gravity="center"/>    
        </LinearLayout>   
   
</LinearLayout>
